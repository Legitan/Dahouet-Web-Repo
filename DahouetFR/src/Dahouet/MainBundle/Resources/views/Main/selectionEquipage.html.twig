{#src/Dahouet/MainBundle/Resources/views/Main/selectionEquipage.html.twig#}

{% extends "DahouetMainBundle:Main:index.html.twig" %} 
{% block section %}
	<section>
		<div class="article">
			<h1 id="inscripRegate"><strong><u>{{ regate.LIBREG }}</u></strong></h1>
			<h1>Information du voilier</h1>
			<div id="liste">
				<p>
					Nom: <strong>{{ voilier.nomvoil }}</strong>
				</p>
				<p>
					Numero de voile: <strong>{{ voilier.numvoil }}</strong>
				</p>
				<p>
					Classe: <strong>{{ voilier.numclass }}</strong>
				</p>
				<p>
					Nombre de points: <strong>{{ voilier.nbrpts }}</strong>
				</p>
			</div>
			<form action="selectionEquipage" method="post">
				<h3>Sélection de l'équipage</h3>
				{% for liste in listEquip %} {{ liste.NOMLIC }}<br /> {% endfor %} <br />
				<select name="validequip"> {% for equips in equipage %}
					<option name="validequip" value="{{ equips.NUMLIC }}">{{
						equips.NOMLIC }}</option> {% endfor %}
				</select>
				<input type="submit" value="Ajouter l'équipier" />
			</form>
			<form action="skipper">
				<input type='submit' value='Equipage complet' />
			</form>
		</div>
	</section>
{% endblock %}

