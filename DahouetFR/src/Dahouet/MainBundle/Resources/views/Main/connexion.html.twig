{# src/Dahouet/MainBundle/Resources/views/Main/connexion.html.twig #}

{% extends "DahouetMainBundle::index.html.twig" %}

{% block connexion %}
    {% if connexion = 1 %}
        {# Si le propriétaire est connecté, on lui dit bonjour #}
        {% block membreConnecte %}
        {% endblock %}
    {% else  %}
        {# Sinon on lui propose de se connecter via le formulaire #}
        {% block membreNonConnecte %}
        {% endblock %}
    {% endif %}
{% endblock %}